#include <stdio.h>

// Function to check if a number is even or odd
char* checkEvenOdd(int number) {
    if (number % 2 == 0)
        return "Even";
    else
        return "Odd";
}

int main() {
    int number;
    
    // Input from the user
    printf("Enter a number: ");
    scanf("%d", &number);

    // Checking and printing the result
    char* result = checkEvenOdd(number);
    printf("The number %d is %s.\n", number, result);

    return 0;
}
